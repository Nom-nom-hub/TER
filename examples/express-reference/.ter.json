{
  "NODE_ENV": {
    "type": "enum",
    "values": ["development", "staging", "production"],
    "default": "development"
  },
  "PORT": {
    "type": "int",
    "minimum": 1,
    "maximum": 65535,
    "default": 3000
  },
  "DATABASE_URL": {
    "type": "url",
    "required": true
  },
  "REDIS_URL": {
    "type": "url",
    "default": "redis://localhost:6379"
  },
  "API_KEY": {
    "type": "secret",
    "required": true
  },
  "LOG_LEVEL": {
    "type": "enum",
    "values": ["error", "warn", "info", "debug"],
    "default": "info"
  },
  "CORS_ORIGIN": {
    "type": "url",
    "required": false
  },
  "JWT_SECRET": {
    "type": "secret",
    "required": true
  },
  "RATE_LIMIT_MAX": {
    "type": "int",
    "minimum": 1,
    "maximum": 10000,
    "default": 100
  }
}
