# Environment
NODE_ENV=development

# Server
PORT=3000

# Database (required)
DATABASE_URL=postgresql://user:password@localhost:5432/myapp

# Cache (optional, defaults to localhost Redis)
REDIS_URL=redis://localhost:6379

# Security (secrets - never commit actual values)
API_KEY=[REDACTED:api-key-xxx]
JWT_SECRET=[REDACTED:jwt-secret-xxx]

# Logging
LOG_LEVEL=debug

# CORS (optional in dev)
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=100
